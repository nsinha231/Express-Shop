<div class="text-center"><h1 class="text-dark">Express Shop</h1></div>
<section class="container shadow-sm my-5 col-md-8 col-lg-6 col-sm-11">
  <form action="/auth/new-password" class="py-4" method="POST">
    <%- include('../includes/messages') %>
    <div class="text-center"><h4 class="text-dark py-3">Sign-In</h4></div>
    <!-- Here fill alert for errors from server -->
    <div class="form-group">
      <label for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        class="form-control"
        placeholder="Create new Password"
        value="<%= typeof password != 'undefined' ? password : '' %>"
      />
    </div>
    <div class="form-group">
      <label for="passwordConfirmation">Confirm Password</label>
      <input
        type="password"
        id="passwordConfirmation"
        name="passwordConfirmation"
        class="form-control"
        placeholder="Confirm Password"
        value="<%= typeof passwordConfirmation != 'undefined' ? passwordConfirmation : '' %>"
      />
    </div>
    <div class="form-group">
      <input type="hidden" name="userId" value="<%= userId %>" />
    </div>
    <div class="form-group">
      <input type="hidden" name="passwordToken" value="<%= passwordToken %>" />
    </div>
    <div class="form-group"></div>
    <button type="submit" class="btn btn-primary">Update Password</button>
    <div class="text-center">
      <a href="/auth/signup">Sign up</a> |
      <a href="/auth/signin">Sign in</a>
    </div>
  </form>
</section>

<hr />

