<div>
  <button
    type="button"
    class="btn btn-outline-danger"
    data-toggle="modal"
    data-target="#<%= path %>"
  >
    Delete
  </button>
</div>
<div
  class="modal fade"
  id="<%= path %>"
  tabindex="-1"
  role="dialog"
  aria-labelledby="modalTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalTitle">
          Confirm Delete of <%= path %>
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-outline-secondary"
          data-dismiss="modal"
        >
          Not now
        </button>
        <form
          class="float-right"
          action="/<%= pre %>/<%= path %>?_method=DELETE"
          method="POST"
        >
          <button type="submit" class="btn btn-outline-danger">
            Yes
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
